// Prisma Schema for ATELIER Luxury E-commerce
// Database: MongoDB

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// User model - stores customer information
model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  email     String     @unique
  password  String
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
  // Relations
  cartItems CartItem[]
  orders    Order[]
}

// Product model - luxury apparel items
model Product {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  slug          String   @unique
  name          String
  description   String
  price         Float
  originalPrice Float?   // For sale items
  
  // Product details
  images        String   // JSON array of image URLs
  category      String   // Outerwear, Tops, Bottoms, Knitwear, Accessories
  sizes         String   // Comma-separated: "XS,S,M,L,XL" or "28,30,32,34,36"
  colors        String   // JSON array of {name, value} objects
  details       String   // JSON array of product details
  
  // Stock & status
  stock         Int      @default(100)
  status        String?  // "new", "limited", "sale", or null
  isFeatured    Boolean  @default(false)
  
  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relations
  cartItems     CartItem[]
}

// CartItem model - links users to products in their cart
model CartItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  quantity  Int      @default(1)
  size      String   // Selected size
  color     String   // Selected color (JSON: {name, value})
  
  // Relations
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Unique constraint to prevent duplicate items
  @@unique([userId, productId, size, color])
}

// Order model - completed purchases
model Order {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber     String   @unique @default(cuid())
  
  // Order details
  totalAmount     Float
  status          String   @default("pending") // pending, processing, shipped, delivered, cancelled
  items           String   // JSON array of order items with product snapshots
  
  // Shipping info (JSON)
  shippingAddress String?
  
  // Relations
  userId          String   @db.ObjectId
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
